<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PamTcc.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <Label Text="Usuários e suas Sugestões" 
               FontSize="24"
               HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Usuarios}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <VerticalStackLayout Spacing="5">

                                <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="18"/>

                                <Label Text="{Binding Telefone}" FontSize="14" TextColor="Gray"/>

                                <Label Text="Sugestões:" FontAttributes="Bold" FontSize="16" Margin="0,5,0,0"/>

                                <StackLayout Margin="10,0,0,0"
                                         BindableLayout.ItemsSource="{Binding Sugestoes}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding Text}" FontSize="14" TextColor="DarkSlateGray"/>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="{Binding StatusMessage}" FontAttributes="Italic" FontSize="12" TextColor="Green" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
